            optionsDecrease?.addEventListener('click', updateInstancesTable);
            optionsIncrease?.addEventListener('click', updateInstancesTable);

            // Initial update
            updateInstancesTable();

            // Observe changes in the option rows
            const observer = new MutationObserver(updateInstancesTable);
            optionRows.forEach(row => {
                observer.observe(row, { childList: true, subtree: true, attributes: true, characterData: true });
            });

